var showPost = $("#post_comments_<%= @post.id %>").text().length;
if (showPost == 0){
  $("#post_comments_<%= @post.id %>").hide().html('<%= j render 'post_comments' %>').fadeIn(1000);
}
else{
  $('#post_comments_<%= @post.id %>').fadeIn(1000);
}

$('#close_post_comments').click(function(){
  $("#post_comments_<%= @post.id %>").fadeOut(1000);
})