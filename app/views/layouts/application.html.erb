<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul>
      <%= render template: 'layouts/logout_navigation' if current_user %>
      <%= render template: 'layouts/login_navigation' if current_user.nil? %>
      <li><%= link_to 'About',
         'https://github.com/keyhit/blog',
          target: '_blank',
          title: 'Project at github' %>
     </li>
     <li><%= link_to 'All posts', all_posts_path %></li>
      <%= render template: 'layouts/user_navigation' if current_user %>
    </ul>
    <p id="notice"><%= notice %></p>
    <%= yield %>
  </body>
</html>
