<%= link_to root_path(anchor: "post_#{@post.id}"),
  remote: true,
  id: "close_show_post_2",
  title: "Back to posts" do %>
  <%= image_tag "icons/iconfinder_left-arrow-back_2931162.png",
  width: icon_size_v,
  height: icon_size_h %>
<% end %>

&nbsp;&nbsp;



<%= link_to user_post_comments_path(user_id: @post.user_id, post_id: @post.id),
  remote: true,
  title: "comments" do %>
<%= image_tag "icons/iconfinder_paste-clipboard-copy_2931174.png",
  width: icon_size_v,
  height: icon_size_h %>
<em id="post_coments_icon_<%= @post.id %>"><%= @post.comments.count   if @post.comments.present? %>
</em>
<% end %>

&nbsp;&nbsp;

<%= link_to root_path, 
  title: "To latest posts" do %>
  <%= image_tag "icons/iconfinder_exit-enter-leave-door-in_2931189.png",
  width: icon_size_v,
  height: icon_size_h %>
<% end %>

&nbsp;&nbsp;

<%= link_to edit_user_post_path(@post.user_id, @post.id),
  remote:true,
  title: "Edit" do %>
  <%= image_tag "icons/iconfinder_settings-gear-setup-adjust-control_2931152.png",
    width: icon_size_v,
    height: icon_size_h %>
<% end if current_user.present? && current_user.id == @post.user_id %>

&nbsp;&nbsp;

<%= link_to user_post_path(@post.user_id, @post.id),
  remote: true,
  title: "Destroy",
  method: :delete, data: {confirm: "Are you sure?"} do %>
  <%= image_tag "icons/iconfinder_trash-delete-remove_2931168.png",
  width: icon_size_v,
  height: icon_size_h %>
<% end if current_user.present? && current_user.id == @post.user_id %>
