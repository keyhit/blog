$("#post").fadeIn(1000);
var showPost = $("#render_post_<%= @post.id %>").text().length;
if (showPost == 0){
  $("#render_post_<%= @post.id %>").hide().append('<%= j render "show" %>').fadeIn(1000);
}
else{
  $('#render_post_<%= @post.id %>').fadeIn(1000);
}

$("#post_<%= params[:id] %>").fadeOut(1000);

$("#close_show_post, #close_show_post_2").click(function(){
  $("#post_<%= params[:id] %>").fadeIn(1000);
  $('#render_post_<%= @post.id %>').fadeOut(1000);
  location.reload()
});

$('#ajax_header').html('<%= @post.header %>');
$('#ajax_image').html('<img src="<%= @post.image_url %>"/>');
$('#ajax_body').before('&nbsp;');


$('#body').html("<%= j @post.body %>");


$("#close_editor").click(function(){
  $("#post_form").fadeOut(1000);
});