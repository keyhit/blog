var showPost = $("#render_post_<%= @post.id %>").text().length;
if (showPost == 0){
  $("#render_post_<%= @post.id %>").hide().append('<%= j render "show" %>').fadeIn(700);
}
else{
  $('#render_post_<%= @post.id %>').fadeIn(1000);
}

$("#post_<%= params[:id] %>").fadeOut(1);

$("#close_show_post ").click(function(){
  $("#post_<%= params[:id] %>").fadeIn(1000);
  $('#render_post_<%= @post.id %>').fadeOut(1000);
});

$('#header').html('<%= @post.header %>')
$('#body').html('<%= @post.body %>')