$("#current_post<%= params[:id]%>").hide().append('<%= j render "show" %>' ).fadeIn(400);

$('#post_preview<%= params[:id]%>').hide();
$('#back_ground_layer').fadeIn(400);

$('#back_ground_layer').click(function(){
  $(this).fadeOut(400);
  $('#current_post<%= @post.id %>').fadeOut(400);
});


$('#edit_post').click(function(){
    $('#current_post<%= @post.id %>').hide();
    $('#back_ground_layer').hide();
});