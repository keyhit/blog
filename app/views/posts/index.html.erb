<div class="row">
  <div class="col-12 new_post_form">
    <div id="new_post"></div>
  </div>
</div>

<% @posts.each do |post| %>
  <div class="row">
    <div class="col-12 new_post_form">
      <div id="render_post_<%= post.id %>"></div>
    </div>
  </div>
  <div id="post_<%= post.id%>">
      <div class="row">
        <div class="col-12">
          <h3 id='posts_headers'><%= post.header.to_s %></h3>
        </div>
      </div>

      <div class="row ">
        <% if post.image.present? %>
          <div class="col-3">
            <%= image_tag post.image_url(:thumb),
              class: 'leftimg' if post.image.present? %>
          </div>
          
          <div class="col-9">
            <p>
              <%= post.body[0..420] %> ...
              <%#= link_to 'read more',
                user_post_path( post.user_id, post.id),
                id: "show_post_#{post.id}",
                remote: true %>

             <%= link_to user_post_path(post.user_id, post.id), 
                remote: true,
                title: "reed more",
                id: "show_post_#{post.id}" do %>
                <%= image_tag "icons/iconfinder_right-forward-arrow_2931159.png",
                width: "30px",
                height: "35px" %>
              <% end %>
            </p>
          </div>

        <% elsif post.image.blank? %>
          <div class="col-12">
            <p>
              <%= post.body[0..420] %> ...
              <%#= link_to 'read more',
                user_post_path( post.user_id, post.id),
                id: "show_post_#{post.id}",
                remote: true %>

              <%= link_to user_post_path( post.user_id, post.id), 
                remote: true,
                title: "reed more",
                id: "show_post_#{post.id}" do %>
                <%= image_tag "icons/iconfinder_right-forward-arrow_2931159.png",
                width: "30px",
                height: "35px" %>
              <% end %>

            </p>
          </div>

        <% elsif post.body.blank? %>
          <div class="col-3">
            <%= image_tag post.image_url(:thumb),
              class: 'leftimg' if post.image.present? %>
          </div>
        <% end %>
      </div>

      <br>
      <div class="row">
        <div class="col-9">
          <div class= "user_info_below_post">
            Created by <i><b><%= post.user.name %> 
              <%= image_tag post.user.avatar_url(:thumb) if post.user.avatar.present? %></b></i>
              <%= post.created_at.to_s[0..15]%>.
              Updated
                <%= post.updated_at.to_s[0..15]%>.
          </div>
        </div>

        <div class="col-3">
          <%#= link_to 'Comments', user_post_comments_path(current_user, post.id) if current_user %>

          <%= link_to user_post_comments_path(post.user_id, post.id), 
            remote: true,
            title: "comments" do %>
            <%= image_tag "icons/iconfinder_paste-clipboard-copy_2931174.png",
            width: "35px",
            height: "40px" %>
          <% end  if current_user %>
        </div>
      </div>
    <hr>
  </div>
<%end%>

